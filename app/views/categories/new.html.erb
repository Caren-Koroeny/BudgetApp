<% content_for :back_path, product_path(@product) %>
<% content_for :page_name, "CREATE TRANSACTION" %>
<% content_for :nav_button do%>
  <%= button_to "Logout", destroy_user_session_path, method: :delete, class: "btn btn-link text-white" %>
<% end %>

<%= form_with(model: [@product, @category], class: "mb-3") do |form| %>
  <div class="mb-3">
    <%= form.label :name, "Name", class: "form-label" %>
    <%= form.text_field :name, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :amount, "Amount", class: "form-label" %>
    <%= form.number_field :amount, class: "form-control", required: true, min: 1 %>
  </div>

  <div class="mb-3">
    <%= form.label :product_ids, "Category", class: "form-label" %>
    <%= form.collection_select :product_ids, current_user.products, :id, :name, {}, { multiple: true, class: "form-select", required: true } %>
  </div>

  <div class="btn-form-container">
<%=form.submit "Create", class: "btn btn-style btn-lg"%>
</div>
<% end %>


